<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h1>
                    <%= user.name %>'s Orders:</h1>
                <% let totalPrice = 0 %>
                    <% if (orders.length <= 0) { %>
                        <h1>Nothing there!</h1>
                        <% } else { %>
                            <% orders.forEach(order => { %>
                                <ul class="orders">
                                    <li class="orders__item">
                                        <h1>Order - #
                                            <%= order._id %>
                                        </h1>
                                        <% order.products.forEach(p => { %>
                                            <li class="orders__products-item">
                                                <%= p.product.title %> (
                                                    <%= p.quantity %>)
                                                        <% totalPrice += p.product.price * p.quantity %>
                                            </li>
                                            <% }); %>
                                    </li>
                                    <li class="orders__products-item"><strong>Price:</strong> $
                                        <%= totalPrice %>
                                    </li>
                                </ul>
                                <% }); %>
                                    <% } %>
            </main>
            <%- include('../includes/end.ejs') %>